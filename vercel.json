{
  "buildCommand": "npm run build:web",
  "outputDirectory": "dist-web",
  "framework": "vite",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/stripe-webhook.ts": {
      "maxDuration": 10
    },
    "api/ebay-auth.ts": {
      "maxDuration": 10
    }
  }
}
